{
  "name": "C++",
  "description": "A general-purpose programming language created as an extension of the C programming language.",
  "lessons": [
    {
      "title": "Basic Syntax",
      "description": "Learn about C++ basic syntax and structure",
      "content": [
        "#include <iostream>",
        "using namespace std;",
        "",
        "int main() {",
        "    // Output to console",
        "    cout << \"Hello, World!\" << endl;",
        "    ",
        "    // Variables",
        "    int number = 42;",
        "    double pi = 3.14159;",
        "    bool isCppFun = true;",
        "    char grade = 'A';",
        "    string message = \"Welcome to C++ programming!\";",
        "    ",
        "    cout << message << endl;",
        "    cout << \"The value of number is: \" << number << endl;",
        "    ",
        "    // Input from console",
        "    int userInput;",
        "    cout << \"Please enter a number: \";",
        "    cin >> userInput;",
        "    cout << \"You entered: \" << userInput << endl;",
        "    ",
        "    return 0;",
        "}"
      ]
    },
    {
      "title": "Functions and Classes",
      "description": "Practice typing C++ functions and classes",
      "content": [
        "#include <iostream>",
        "#include <string>",
        "using namespace std;",
        "",
        "// Function declaration",
        "int add(int a, int b);",
        "float multiply(float a, float b);",
        "",
        "// Class definition",
        "class Person {",
        "private:",
        "    string name;",
        "    int age;",
        "",
        "public:",
        "    // Constructor",
        "    Person(string personName, int personAge) {",
        "        name = personName;",
        "        age = personAge;",
        "    }",
        "    ",
        "    // Methods",
        "    void introduce() {",
        "        cout << \"Hello, my name is \" << name << \" and I am \" << age << \" years old.\" << endl;",
        "    }",
        "    ",
        "    // Getters and setters",
        "    string getName() {",
        "        return name;",
        "    }",
        "    ",
        "    void setName(string newName) {",
        "        name = newName;",
        "    }",
        "    ",
        "    int getAge() {",
        "        return age;",
        "    }",
        "    ",
        "    void setAge(int newAge) {",
        "        age = newAge;",
        "    }",
        "};",
        "",
        "int main() {",
        "    // Function calls",
        "    int sum = add(5, 3);",
        "    cout << \"Sum: \" << sum << endl;",
        "    ",
        "    float product = multiply(2.5, 3.0);",
        "    cout << \"Product: \" << product << endl;",
        "    ",
        "    // Object creation and method calls",
        "    Person person1(\"John\", 30);",
        "    person1.introduce();",
        "    ",
        "    Person person2(\"Alice\", 25);",
        "    person2.setAge(26);",
        "    person2.introduce();",
        "    ",
        "    return 0;",
        "}",
        "",
        "// Function definitions",
        "int add(int a, int b) {",
        "    return a + b;",
        "}",
        "",
        "float multiply(float a, float b) {",
        "    return a * b;",
        "}"
      ]
    },
    {
      "title": "Control Flow",
      "description": "Practice typing C++ control flow statements",
      "content": [
        "#include <iostream>",
        "using namespace std;",
        "",
        "int main() {",
        "    // If-else statement",
        "    int score = 85;",
        "    ",
        "    if (score >= 90) {",
        "        cout << \"Grade: A\" << endl;",
        "    } else if (score >= 80) {",
        "        cout << \"Grade: B\" << endl;",
        "    } else if (score >= 70) {",
        "        cout << \"Grade: C\" << endl;",
        "    } else if (score >= 60) {",
        "        cout << \"Grade: D\" << endl;",
        "    } else {",
        "        cout << \"Grade: F\" << endl;",
        "    }",
        "    ",
        "    // Switch statement",
        "    int day = 3;",
        "    string dayName;",
        "    ",
        "    switch (day) {",
        "        case 1:",
        "            dayName = \"Monday\";",
        "            break;",
        "        case 2:",
        "            dayName = \"Tuesday\";",
        "            break;",
        "        case 3:",
        "            dayName = \"Wednesday\";",
        "            break;",
        "        case 4:",
        "            dayName = \"Thursday\";",
        "            break;",
        "        case 5:",
        "            dayName = \"Friday\";",
        "            break;",
        "        case 6:",
        "            dayName = \"Saturday\";",
        "            break;",
        "        case 7:",
        "            dayName = \"Sunday\";",
        "            break;",
        "        default:",
        "            dayName = \"Invalid day\";",
        "            break;",
        "    }",
        "    ",
        "    cout << \"Day: \" << dayName << endl;",
        "    ",
        "    // For loop",
        "    cout << \"Counting from 1 to 5:\" << endl;",
        "    for (int i = 1; i <= 5; i++) {",
        "        cout << \"Count: \" << i << endl;",
        "    }",
        "    ",
        "    // While loop",
        "    cout << \"Countdown from 5 to 1:\" << endl;",
        "    int countdown = 5;",
        "    while (countdown > 0) {",
        "        cout << \"Countdown: \" << countdown << endl;",
        "        countdown--;",
        "    }",
        "    ",
        "    // Do-while loop",
        "    cout << \"Do-while example:\" << endl;",
        "    int num = 1;",
        "    do {",
        "        cout << \"Number: \" << num << endl;",
        "        num++;",
        "    } while (num <= 3);",
        "    ",
        "    return 0;",
        "}"
      ]
    }
  ]
}